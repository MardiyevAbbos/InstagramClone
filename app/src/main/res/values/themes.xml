<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstagramClone" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/app_color_1</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.InstagramClone">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@drawable/app_main_gradient</item>
        // Important to draw behind cutouts
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

</resources>